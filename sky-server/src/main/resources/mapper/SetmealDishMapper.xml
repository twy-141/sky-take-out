<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sky.mapper.SetmealDishMapper">
    <select id="selectSetmealIdsByDishIds" resultType="java.lang.Long">select setmeal_id from
        setmeal_dish where dish_id in
        <foreach collection="ids" item="id" separator="," open="("
                 close=")">#{id}
        </foreach>
    </select>

    <!-- insertBatch -->

    <insert id="insertBatch">
        insert into setmeal_dish (setmeal_id,name,dish_id, copies, price) values
        <foreach
                collection="setmealDishes" item="setmealDish" separator=",">
            (#{setmealDish.setmealId},#{setmealDish.name},#{setmealDish.dishId}, #{setmealDish.copies},
            #{setmealDish.price})
        </foreach>
    </insert>

    <!-- 根据套餐id删除套餐菜品关系数据 -->

    <delete id="deleteBySetmealId">
        delete from setmeal_dish where setmeal_id = #{setmealId}
    </delete>

    <!-- 根据套餐id批量删除套餐菜品关系数据 --> 

    <delete id="deleteBySetmealIds">
        delete from setmeal_dish where setmeal_id in
        <foreach collection="setmealIds" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>
</mapper>  
